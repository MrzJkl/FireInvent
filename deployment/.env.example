# =============================================================================
# FireInvent Docker Deployment Configuration
# =============================================================================
# Copy this file to .env and fill in the required values.
# WARNING: Never commit .env files with real credentials to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# API Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
API_DB_NAME=fireinvent
API_DB_USER=fireinventuser
API_DB_PASSWORD=changeme_api_db_password

# -----------------------------------------------------------------------------
# Keycloak Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
KEYCLOAK_DB_NAME=keycloak
KEYCLOAK_DB_USER=keycloakuser
KEYCLOAK_DB_PASSWORD=changeme_keycloak_db_password

# -----------------------------------------------------------------------------
# Keycloak Configuration
# -----------------------------------------------------------------------------
# Admin credentials for initial Keycloak setup
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=changeme_keycloak_admin_password

# External hostname where Keycloak will be accessible
# Example: auth.example.com
KEYCLOAK_HOSTNAME=localhost

# -----------------------------------------------------------------------------
# FireInvent API Configuration
# -----------------------------------------------------------------------------
# The authority URL for JWT token validation (Keycloak realm URL)
# Example: https://auth.example.com/realms/fireinvent
FIREINVENT_AUTHORITY=http://localhost:8080/realms/fireinvent

# -----------------------------------------------------------------------------
# CORS Configuration (for API)
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins
# Example: https://app.example.com,https://www.example.com
CORS_ALLOWED_ORIGINS=

# -----------------------------------------------------------------------------
# SMTP Configuration (for Keycloak email sending)
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_FROM=noreply@example.com
SMTP_USER=
SMTP_PASSWORD=

# -----------------------------------------------------------------------------
# Application URLs (used for Keycloak client configuration)
# -----------------------------------------------------------------------------
# URL where the SPA is hosted
# Example: https://app.example.com
FIREINVENT_SPA_URL=http://localhost:3000

# URL where Swagger/API documentation is accessible
# Example: https://api.example.com
FIREINVENT_SWAGGER_URL=http://localhost:5001
