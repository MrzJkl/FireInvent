# ========================================
# API Configuration
# ========================================

# PostgreSQL database for the FireInvent API
API_DB_NAME=fireinvent
API_DB_USER=fireinventuser
API_DB_PASSWORD=changeme_api_db_password  # Change this to a secure password

# OpenID Connect authority URL for authentication
# For production, use: https://${AUTH_DOMAIN}/realms/fireinvent
FIREINVENT_AUTHORITY=http://localhost:8080/realms/fireinvent

# CORS allowed origins (comma-separated list)
# Leave empty to allow all origins (*)
CORS_ALLOWED_ORIGINS=

# ========================================
# Reverse Proxy (Caddy) Configuration
# ========================================

# Domain names for the services
# Production example: api.example.com, auth.example.com, example.com
API_DOMAIN=api.example.com
AUTH_DOMAIN=auth.example.com
UI_DOMAIN=example.com

# ========================================
# Keycloak Configuration
# ========================================

# PostgreSQL database for Keycloak
KEYCLOAK_DB_NAME=keycloak
KEYCLOAK_DB_USER=keycloakuser
KEYCLOAK_DB_PASSWORD=changeme_keycloak_db_password  # Change this to a secure password

# Keycloak admin credentials
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=changeme_keycloak_admin_password  # Change this to a secure password

KEYCLOAK_FIREINVENT_API_CLIENT_ID=fireinvent-api
KEYCLOAK_FIREINVENT_API_CLIENT_SECRET=changeme_keycloak_fireinvent_api_client_secret  # Change this to a secure secret

# Keycloak hostname (should match AUTH_DOMAIN in production)
KEYCLOAK_HOSTNAME=localhost

# SMTP configuration for keycloak email notifications (password resets, etc.)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_FROM=noreply@example.com
SMTP_USER=keycloak_smtp_user
SMTP_PASSWORD=changeme_keycloak_smtp_password  # Change this to a secure password

FIREINVENT_SPA_URL=http://localhost:5173
FIREINVENT_API_EXPLORER_URL=https://localhost:7197
FIREINVENT_API_CLIENT_ID=fireinvent-api
FIREINVENT_API_CLIENT_SECRET=changeme_keycloak_fireinvent_api_client_secret # Change this to a secure secret
