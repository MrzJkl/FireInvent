{
  "id": "fireinvent",
  "realm": "fireinvent",
  "displayName": "FireInvent",
  "internationalizationEnabled": true,
  "supportedLocales": ["en", "de"],
  "roles": {
    "realm": [
      {
        "name": "admin",
        "description": "Full application administration"
      },
      {
        "name": "procurement",
        "description": "Inventory and order management"
      },
      {
        "name": "maintenance",
        "description": "Maintenance management"
      }
    ]
  },
  "clients": [
    {
      "clientId": "fireinvent-swagger",
      "name": "FireInvent Swagger UI",
      "description": "FireInvent API Swagger UI",
      "enabled": true,
      "redirectUris": ["${FIREINVENT_SWAGGER_URL}/swagger-ui/*"],
      "webOrigins": ["${FIREINVENT_SWAGGER_URL}/*"],
      "serviceAccountsEnabled": false
    }
  ]
}
