{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "Authentication": {
    "Authority": "",
    "ValidIssuers": [],
    "Scopes": [ "openid", "profile", "email" ],
    "RequireHttpsMetadata": true,
    "ValidateLifetime": true,
    "ClockSkewSeconds": 60
  },
  "Cors": {
    "Enabled": true,
    "AllowedOrigins": [],
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
    "AllowedHeaders": [ "Authorization", "Content-Type", "X-Tenant-Id" ],
    "AllowCredentials": false
  },
  "KeycloakAdmin": {
    "Url": "",
    "Realm": "fireinvent",
    "AdminClientId": "fireinvent-api",
    "AdminClientSecret": ""
  },
  "OpenApi": {
    "AuthorizationUrl": "",
    "TokenUrl": "",
    "ApiExplorerClientId": "fireinvent-api-explorer"
  }
}
