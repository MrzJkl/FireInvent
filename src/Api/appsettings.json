{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "Authentication": {
    "Authority": "http://localhost:8080/realms/fireinvent/",
    "OidcDiscoveryUrlForSwagger": "http://localhost:8080/realms/fireinvent/.well-known/openid-configuration",
    "ClientIdForSwagger": "fireinvent-swagger",
    "ValidIssuers": [],
    "Scopes": [ "openid", "profile", "email" ]
  },
  "MailOptions": {
    "Host": "smtp.example.com",
    "Port": 465,
    "Username": "",
    "Password": "",
    "SenderName": "FireInvent",
    "SenderAddress": ""
  }
}
