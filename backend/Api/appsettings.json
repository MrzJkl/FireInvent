{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" }
    ]
  },
  "AllowedHosts": "*",
  "Authentication": {
    "Authority": "https://auth.example.com/application/o/my-api/",
    "ClientIdForSwagger": "fireinvent-swagger",
    "Scopes": [ "openid", "profile", "email" ]
  },
  "MailOptions": {
    "Host": "smtp.example.com",
    "Port": 465,
    "Username": "",
    "Password": "",
    "SenderName": "FireInvent",
    "SenderAddress": ""
  }
}
