{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Debug",
        "System": "Debug"
      }
    },
    "WriteTo": [
      { "Name": "Console" }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "Authentication": {
    "Authority": "",
    "OidcDiscoveryUrl": null,
    "ClientIdForSwagger": "",
    "Scopes": [ "openid", "profile", "email" ]
  },
  "MailOptions": {
    "Host": "smtp.example.com",
    "Port": 465,
    "Username": "",
    "Password": "",
    "SenderName": "FireInvent",
    "SenderAddress": ""
  }
}
